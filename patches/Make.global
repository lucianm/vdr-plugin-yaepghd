# Plugins need to be compiled with position independent code, otherwise linking
# VDR against it will fail.

ifdef PLUGIN
CFLAGS   += -fPIC
CXXFLAGS += -fPIC
endif

DEFINES += -D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE -D_LARGEFILE64_SOURCE
